<Window x:Class="Slik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slik"
        mc:Ignorable="d"
        Title="MainWindow"
        AllowsTransparency="True"
        Height="900"
        Width="1600"
        WindowStyle="None">
    <Grid x:Name="WindowGrid" Background="#FF101010" MouseDown="Grid_MouseDown">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*">
            </RowDefinition>
            <RowDefinition Height="95*">
            </RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Slɪ́k"
            FontFamily="{StaticResource SpaceMono}"
            FontSize="24">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#C7E4FF"/>
                    <GradientStop Offset="1" Color="#83C3FF"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>


        <Grid x:Name="ContentGrid" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*">
                </ColumnDefinition>

                <ColumnDefinition Width="55*">
                </ColumnDefinition>

                <ColumnDefinition Width="25*">
                </ColumnDefinition>
            </Grid.ColumnDefinitions>


            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource PanelStyle}"/>
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource PanelStyle}"/>
            <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource PanelStyle}"/>
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelStyle}"/>
        </Grid>


    </Grid>
</Window>
